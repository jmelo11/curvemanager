{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "API forward rate request",
    "type": "object",
    "properties": {
        "curve": {
            "type": "string",
            "description": "Curve name"
        },
        "dates": {
            "type": "array",
            "description": "Requested dates",
            "items": {
                "$ref": "common.schema.json#/definitions/date"
            },
            "minItems": 1
        }
    },
    "required": [
        "curve",
        "dates"
    ]
}