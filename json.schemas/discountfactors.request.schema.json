{   
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "discountsfactors.request.schema.json",
    "description": "API discount factor request",
    "type": "object",
    "properties": {       
        "curve": {
            "type": "string",
            "description": "Curve name"
        },
        "dates": {
            "type": "array",
            "description": "Requested dates",
            "items": {
                "type": "string",
                "format": "date"
            },
            "minItems": 1
        }
    },
    "required": [
        "curve",
        "dates"
    ]
}