{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Curve Builder Request Schema",
    "properties": {
        "refDate": {
            "$ref": "common.schema.json#/definitions/date"
        },
        "curves": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "curveName": {
                        "type": "string"
                    },
                    "curveConfig": {
                        "anyOf": [
                            {
                                "$ref": "bootstrapcurve.schema.json"
                            },
                            {
                                "$ref": "discountcurve.schema.json"
                            },
                            {
                                "$ref": "flatforwardcurve.schema.json"
                            }
                        ]
                    },
                    "curveIndex":{
                        "$ref": "rateindex.schema.json"
                    }
                },
                "required": [
                    "curveName",
                    "curveConfig"
                ]
            }
        }
    },
    "required": [
        "refDate",
        "curves"
    ]
}