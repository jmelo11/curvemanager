{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "API forward rate request",
    "type": "object",
    "properties": {
        "curve": {
            "type": "string",
            "description": "Curve name"
        },
        "dates": {
            "type": "array",
            "description": "Requested dates",
            "items": {
                "type": "object",
                "properties": {
                    "startDate": {
                        "$ref": "common.schema.json#/definitions/date"
                    },
                    "endDate": {
                        "$ref": "common.schema.json#/definitions/date"
                    }
                },
                "required": [
                    "startDate",
                    "endDate"
                ]
            },
            "minItems": 1
        }
    },
    "required": [
        "curve",
        "dates"
    ]
}